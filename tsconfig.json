{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "@tmp": ["./src/elements/templates/index"],
      "@cmp/*": ["./src/elements/components/*"],
      "@img": ["./src/assets/images/*"],

      "@asset/*": ["./src/assets/*"],
      "@api/*": ["./api/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "api"]
}
